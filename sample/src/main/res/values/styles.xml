<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Overlay" parent="AppTheme">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
    </style>

    <declare-styleable name="ShapeTextView">
        <attr name="scrim_color" format="color" />
        <attr name="shape_corner" format="dimension" />
        <attr name="radius_left_top" format="boolean" />
        <attr name="radius_left_bottom" format="boolean" />
        <attr name="radius_right_top" format="boolean" />
        <attr name="radius_right_bottom" format="boolean" />
        <attr name="stroke_color" format="color" />
        <attr name="stroke_width" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BetNumberTextView">
        <attr name="extra_space" format="dimension" />
        <attr name="extra_color" format="color" />
        <attr name="extra_text_size" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BackgroundRadioButton">
        <attr name="button_drawable" format="reference" />
        <attr name="scale_ratio" format="float" />
    </declare-styleable>
</resources>
